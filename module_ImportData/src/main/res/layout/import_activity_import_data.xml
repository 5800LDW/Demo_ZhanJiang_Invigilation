<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.tecsun.jc.base.widget.TitleBar style="@style/style_title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/item_margin_bar"
        android:background="@color/c_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <LinearLayout
            android:id="@+id/llImport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_10"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btImport"
                style="@style/style_blue_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="导入"/>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="top"
            android:layout_marginTop="@dimen/dimen_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|top"
                android:gravity="center_vertical|top"
                android:text="温馨提示："
                android:textColor="@color/c_ac7f5d"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:text="@string/import_data_tips"
                android:textColor="@color/c_ac7f5d"
                android:textSize="17dp" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>
