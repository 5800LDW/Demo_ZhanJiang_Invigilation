<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_all_bg">


    <com.tecsun.jc.base.widget.TitleBar style="@style/style_title_bar" />

    <com.tecsun.jc.base.widget.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_15"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btBatchAddStudent"
                style="@style/style_mine_option"
                android:text="@string/base_batch_addition_of_students"
                android:drawableLeft="@drawable/icon_add_student_batch"
                android:drawableStart="@drawable/icon_add_student_batch"
                android:layout_marginTop="@dimen/dimen_10"/>

            <View
                style="@style/style_h_line"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"/>

            <TextView
                android:id="@+id/btAddStudent"
                style="@style/style_mine_option"
                android:text="新增学生"
                android:drawableLeft="@drawable/ic_my_profile"
                android:drawableStart="@drawable/ic_my_profile" />

            <View
                style="@style/style_h_line"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btAddInvigilator"
                    style="@style/style_mine_option"
                    android:text="@string/app_add_new_invigilator_data"
                    android:drawableLeft="@drawable/ic_my_news_modification"
                    android:drawableStart="@drawable/ic_my_news_modification"/>

                <com.tecsun.jc.base.widget.DragBallView
                    android:id="@+id/dragBallView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_gravity="left"
                    android:layout_marginStart="35dp"
                    />
            </FrameLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"/>
        </LinearLayout>
    </com.tecsun.jc.base.widget.ObservableScrollView>


</LinearLayout>