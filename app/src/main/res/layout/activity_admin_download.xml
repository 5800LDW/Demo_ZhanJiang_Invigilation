<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tecsun.jc.base.widget.TitleBar style="@style/style_title_bar" />

    <View style="@style/style_h_line" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_10">

        <TextView
            android:id="@+id/tv_lbl_district_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/must"
            android:text="考官:"
            android:textColor="@color/c_1c1c1c"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:id="@+id/rl01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_lbl_district_filter"
            android:layout_toRightOf="@id/tv_lbl_district_filter"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_district_filter_naw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_open_naw" />

            <TextView
                android:id="@+id/tvExaminer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toStartOf="@id/iv_district_filter_naw"
                android:layout_toLeftOf="@id/iv_district_filter_naw"
                android:hint="@string/app_please_select_examiner"
                android:textColor="@color/c_1c1c1c"
                android:textColorHint="@color/c_8a8a8a"
                android:textSize="@dimen/text_16" />

        </RelativeLayout>


    </RelativeLayout>

    <View style="@style/style_h_line" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_10">

        <TextView
            android:id="@+id/tv_card_category_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/must"
            android:text="考场:"
            android:textColor="@color/c_1c1c1c"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:id="@+id/rl02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_card_category_filter"
            android:layout_toRightOf="@id/tv_card_category_filter"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_category_filter_naw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_open_naw" />

            <TextView
                android:id="@+id/tvVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toStartOf="@id/iv_category_filter_naw"
                android:layout_toLeftOf="@id/iv_category_filter_naw"
                android:hint="@string/app_please_select_venue"
                android:textColor="@color/c_1c1c1c"
                android:textColorHint="@color/c_8a8a8a"
                android:textSize="@dimen/text_16" />

        </RelativeLayout>


    </RelativeLayout>

    <View style="@style/style_h_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_lbl_bank_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/must"
            android:text="@string/card_apply_lbl_bank_filter"
            android:textColor="@color/c_1c1c1c"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:id="@+id/rel_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_lbl_bank_filter"
            android:layout_toRightOf="@id/tv_lbl_bank_filter"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_bank_filter_naw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_open_naw" />

            <TextView
                android:id="@+id/tv_bank_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toStartOf="@id/iv_bank_filter_naw"
                android:layout_toLeftOf="@id/iv_bank_filter_naw"
                android:hint="@string/card_apply_bank_filter_hint"
                android:textColor="@color/c_1c1c1c"
                android:textColorHint="@color/c_8a8a8a"
                android:textSize="@dimen/text_16" />
        </RelativeLayout>


    </RelativeLayout>

    <View style="@style/style_h_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/c_f3f3f3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/must"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_10"
            android:text="@string/card_card_company_filter"
            android:textColor="@color/c_1c1c1c"
            android:textSize="@dimen/text_16"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rel_card_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_10"
            android:textColor="@color/c_1c1c1c"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_card_company_naw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_open_naw" />

            <TextView
                android:id="@+id/tv_card_company_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toStartOf="@id/iv_card_company_naw"
                android:layout_toLeftOf="@id/iv_card_company_naw"
                android:hint="@string/card_lbl_bank_hint"
                android:textColor="@color/c_1c1c1c"
                android:textColorHint="@color/c_8a8a8a"
                android:textSize="@dimen/text_16" />
        </RelativeLayout>


        <com.tecsun.jc.base.widget.corner.RoundCornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_weight="1"
            android:background="@color/c_white"
            android:orientation="vertical"
            app:roundBottomLeft="true"
            app:roundBottomRight="true"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="5dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="考生列表"
                android:textColor="@color/c_btn_click"
                android:textSize="18dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15">

                <include layout="@layout/line_horizontal" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/app_item_examinee" />


        </com.tecsun.jc.base.widget.corner.RoundCornerLinearLayout>


        <Button
            android:id="@+id/btnNextStep"
            style="@style/style_blue_btn"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dimen_15"
            android:onClick="nextStepConfirm"
            android:text="数据绑定" />

    </LinearLayout>
</LinearLayout>