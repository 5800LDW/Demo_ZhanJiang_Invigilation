<?xml version="1.0" encoding="utf-8"?>
<!-- 形状 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <solid android:color="#ffffff" />
    <!-- 边框 -->
    <stroke
        android:width="1dip"
        android:color="@color/border_block" />
    <!-- 内填充颜色 -->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="5dp"
        android:top="5dp" />
    <!-- 圆角 -->
    <corners android:radius="8dp" />

</shape>