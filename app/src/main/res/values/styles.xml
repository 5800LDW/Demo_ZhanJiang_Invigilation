<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyAppTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/ic_start_page</item>-->
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="style_mine_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:background">@drawable/white_black02_selector</item>
        <item name="android:drawableRight">@drawable/ic_right_arrow</item>
        <item name="android:drawableEnd">@drawable/ic_right_arrow</item>
        <item name="android:drawablePadding">@dimen/dimen_20</item>
        <item name="android:textColor">@color/c_1c1c1c</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_pop_up_window2">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Base application theme. -->
    <style name="UnableSplitTouchAppTheme" parent="AppTheme">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="app_login_text_style" >
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="text_color">@color/black</item>
        <item name="text_size">20dp</item>
        <item name="android:maxLines">2</item>
    </style>



    <style name="app_main_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/shape_grey_frame</item>
    </style>

    <style name="app_main_iv_left">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="app_main_tv_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_main_tv_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/c_5f5f5f</item>
    </style>

    <style name="app_main_iv_right">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/app_zhanjiang_right_next_tips</item>
    </style>


</resources>













































