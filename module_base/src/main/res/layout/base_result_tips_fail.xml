<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appDialogLoadingFL"
    android:layout_width="match_parent"
    android:minWidth="360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/base_shape_round_white_bg2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dimen_10"

        android:paddingRight="20dp"
        android:paddingBottom="@dimen/dimen_10">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示:"
            android:textColor="@color/c_2591ff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/ivTipIcon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/base_zhanjiang_result_fail" />

        <ImageView
            android:id="@+id/ivTipIcon2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@drawable/base_zhanjiang_tips_success" />


        <TextView
            android:id="@+id/tvFailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="个人申报信息提交成功"
            android:textColor="@color/c_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvFailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/c_ff4c4c"
            android:textSize="14dp"
            tools:text="个人申报信息提交成功" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_weight="0.6"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_shape_round_time_select_left"
                    android:gravity="center"
                    android:text="@string/pickerview_cancel"
                    android:textColor="@color/c_2591ff"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="30dp"
                    android:layout_height="1px"/>

                <Button
                    android:id="@id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_shape_round_time_select_right"
                    android:gravity="center"
                    android:text="@string/pickerview_submit"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_weight="0.6" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

















