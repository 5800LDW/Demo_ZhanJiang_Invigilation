<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_313131"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="65dp"
            android:background="@drawable/base_take_photo_close" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_id_card_negative_new_copy"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivDialogImgShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/base_zhanjiang_result_fail"
            android:rotation="90"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="-80dp"
            android:gravity="center"
            android:rotation="90">
            <ImageView
                android:layout_width="25dp"
                android:background="@drawable/base_tick"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/mTvTakeIdTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:text="身份证国徽面拍摄成功"
                android:textColor="@color/c_f1af00"
                android:textSize="@dimen/x60" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvComplete"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/base_shape_round_blue"
            android:gravity="center"
            android:padding="5dp"
            android:rotation="90"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tvTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:rotation="90"
            android:text="重新拍摄"
            android:textColor="@color/c_2591ff"
            android:textSize="18dp" />


        <ImageView
            android:id="@+id/ivShowPic"
            android:layout_width="@dimen/x941"
            android:layout_height="@dimen/y636"
            android:layout_gravity="center"
            android:background="@drawable/base_bg_negative_01"
            android:contentDescription="@null"
            android:rotation="90"
            android:scaleType="centerCrop" />

        <!--        614.0px-->
        <!--        415.33px-->
    </FrameLayout>

</LinearLayout>














